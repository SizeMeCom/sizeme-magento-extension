<config>
    <sections>
        <sizeme_measurements translate="label">
            <label>SizeMe</label>
            <tab>service</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <service_status translate="label">
                            <label>Service Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>sizeme_measurements/system_config_source_service_status</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </service_status>
                        <custom_size_selection translate="label">
                            <label>Custom size selection (buttonize)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custom_size_selection>
                    </fields>
                </general>
                <template_settings translate="label">
                    <label>Template Settings</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <replace_product_view_type_configurable_template translate="label">
                            <label>Replace Configurable Product Option Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </replace_product_view_type_configurable_template>
                    </fields>
                </template_settings>
                <attribute_settings translate="label">
                    <label>Attribute Settings</label>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <size_attributes translate="label">
                            <label>Product Size Attributes</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>sizeme_measurements/system_config_source_catalog_product_attribute</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </size_attributes>
                    </fields>
                </attribute_settings>
                <ui_options translate="label">
                    <label>UI Options</label>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <prepend_top_header_element translate="label">
                            <label>Prepend Top Header To Element</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </prepend_top_header_element>
                        <append_in_content_toggler_element translate="label">
                            <label>Append In Content Toggler To Element</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </append_in_content_toggler_element>
                        <actual_selection_element translate="label">
                            <label>Actual Selection Element</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </actual_selection_element>
                        <visual_selection_element translate="label">
                            <label>Visual Selection Element</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </visual_selection_element>
                        <append_slider_element translate="label">
                            <label>Append Slider To Element</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </append_slider_element>
                        <size_selection_container_element translate="label">
                            <label>Size Selection Container Element</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </size_selection_container_element>
                        <after_detailed_link_element translate="label">
                            <label>After Detailed Link To Element</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </after_detailed_link_element>
                        <after_remorse_box_element translate="label">
                            <label>After Remorse Box To Element</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </after_remorse_box_element>
                        <append_detailed_view_element translate="label">
                            <label>Append Detailed View Element</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </append_detailed_view_element>
                        <insert_messages_element translate="label">
                            <label>Insert Messages To Element</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </insert_messages_element>
                        <append_size_guide_element translate="label">
                            <label>Append Size Guide To Element</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </append_size_guide_element>
                    </fields>
                </ui_options>
            </groups>
        </sizeme_measurements>
    </sections>
</config>
